<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="course_form_view">
            <field name="name">course.form</field>
            <field name="model">it_courses.it_courses</field>
            <field name="arch" type="xml">

                <form string="courses form">
                        <group>
                            <field name="name"/>
                        </group>

                        <notebook >
                            <page string="Description">
                                 <field name="description"/>
                            </page>
                            <page string="About">
                                 About ME
                            </page>
                        </notebook>
                </form>


             </field>
        </record>

         <record model="ir.ui.view" id="course_search_view">
            <field name="name">course.search</field>
            <field name="model">it_courses.it_courses</field>
            <field name="arch" type="xml">
             <search>
                <field name="name"/>
                <field name="description"/>
            </search>

             </field>
        </record>

        <record model="ir.actions.act_window" id="action_list_courses">
                <field name="name">Courses</field>
                <field name="res_model">it_courses.it_courses</field>
                <field name="view_mode">tree,form</field>
        </record>
        <menuitem id="menu_main"  name="It Courses" />
        <menuitem id="menu_Courses" parent="menu_main" name="Main Courses"/>
        <menuitem id="Courses" parent="menu_Courses" name="Courses" action="action_list_courses"/>

    </data>
</odoo>